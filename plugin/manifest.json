{

  "description": "Adds browser action icon to toolbar to open packaged newslyzer web page.",
  "manifest_version": 2,
  "name": "open-newslyzer",
  "version": "1.0",
  "homepage_url": "https://gitlab.kaleidos.net/newslyzer/newslyzer-front",
  "icons": {
    "48": "icons/page-48.png"
  },

  "background": {
    "scripts": [
      "browser-polyfill.js",
      "background.js"
    ]
  },

  "browser_action": {
    "default_icon": "icons/page-32.png"
  },

  "permissions": [
    "activeTab",
    "<all_urls>"
  ],

  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"

}
